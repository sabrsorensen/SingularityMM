{
  "$schema": "https://schema.tauri.app/config/2",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "bundle": {
    "active": true,
    "resources": [
      "locales/*"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ],
    "targets": "all"
  },
  "productName": "Singularity",
  "mainBinaryName": "Singularity",
  "version": "2.0.0",
  "identifier": "com.syzzle.singularity",
  "plugins": {},
  "app": {
    "windows": [
      {
        "title": "Singularity",
        "width": 950,
        "height": 900,
        "resizable": true,
        "decorations": false,
        "transparent": true,
        "fullscreen": false,
        "visible": false,
        "minHeight": 671,
        "useHttpsScheme": true,
        "minWidth": 950
      }
    ],
    "security": {
      "capabilities": [
        "default"
      ],
      "csp": null
    }
  }
}