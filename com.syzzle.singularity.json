{
  "app-id": "com.syzzle.singularity",
  "runtime": "org.gnome.Platform",
  "runtime-version": "49",
  "sdk": "org.gnome.Sdk",
  "command": "singularity-wrapper",
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri",
    "--filesystem=xdg-run/dri",
    "--env=LIBGL_DEBUG=verbose",
    "--filesystem=home",
    "--filesystem=xdg-download",
    "--filesystem=xdg-documents",
    "--filesystem=xdg-desktop",
    "--env=ATK_ADAPTOR=dbus",
    "--env=WEBKIT_EXEC_PATH=/app/libexec",
    "--env=WEBKIT_DISABLE_COMPOSITING_MODE=1",
    "--talk-name=org.freedesktop.Notifications",
    "--talk-name=org.gtk.vfs.*",
    "--filesystem=xdg-run/gvfsd"
  ],
  "add-extensions": {
    "org.freedesktop.Platform.GL.default": {
      "directory": "lib/GL"
    },
    "org.freedesktop.Platform.GL.nvidia": {
      "directory": "lib/GL-nvidia"
    },
    "org.freedesktop.Platform.VAAPI.Intel": {
      "directory": "lib/vaapi-intel"
    },
    "org.freedesktop.Platform.VAAPI.AMD": {
      "directory": "lib/vaapi-amd"
    },
    "org.freedesktop.Platform.VAAPI.Nvidia": {
      "directory": "lib/vaapi-nvidia"
    }
  },
  "modules": [
    {
      "name": "singularity",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -p /app/bin /app/lib /app/libexec /app/share/applications /app/share/icons/hicolor/128x128/apps",
        "install -m755 Singularity /app/bin/singularity",
        "echo 'Copying libraries excluding system libs...'",
        "find lib -name \"*.so*\" ! -name \"libc.so*\" ! -name \"libdl.so*\" ! -name \"libpthread.so*\" ! -name \"libm.so*\" ! -name \"librt.so*\" ! -name \"libresolv.so*\" ! -name \"libnss_*\" ! -name \"libutil.so*\" ! -name \"ld-linux*\" | xargs -I {} cp {} /app/lib/",
        "if [[ -d libexec ]]; then echo 'Copying additional libexec files...'; cp -r libexec/* /app/libexec/; fi",
        "install -m755 singularity-wrapper /app/bin/singularity-wrapper",
        "install -m644 singularity.desktop /app/share/applications/com.syzzle.singularity.desktop",
        "install -m644 singularity.png /app/share/icons/hicolor/128x128/apps/com.syzzle.singularity.png",
        "echo 'Final directory structure:'",
        "find /app -type f | head -20"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "flatpak-source"
        }
      ]
    },
    {
      "name": "libcanberra",
      "buildsystem": "autotools",
      "config-opts": ["--enable-gtk3"],
      "make-install-args": ["systemdsystemunitdir=/app/share/systemd/system"],
      "sources": [
        {
          "type": "archive",
          "url": "https://0pointer.de/lennart/projects/libcanberra/libcanberra-0.30.tar.xz",
          "sha256": "c2b671e67e0c288a69fc33dc1b6f1b534d07882c2aceed37004bf48c601afa72"
        }
      ]
    },
    {
      "name": "util-linux",
      "buildsystem": "meson",
      "config-opts": ["-Dsystemd=disabled", "-Dbuild-bash-completion=disabled"],
      "sources": [
        {
          "type": "archive",
          "url": "https://mirrors.edge.kernel.org/pub/linux/utils/util-linux/v2.41/util-linux-2.41.3.tar.xz",
          "sha256": "3330d873f0fceb5560b89a7dc14e4f3288bbd880e96903ed9b50ec2b5799e58b"
        }
      ]
    }
  ]
}
